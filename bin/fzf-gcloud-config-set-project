#!/usr/bin/env zsh

set -e

function fzf-gcloud-config-set-project() {
    local project="$(gcloud projects list |
        eval "fzf ${FZF_DEFAULT_OPTS} --header-lines=1" |
        awk '{ print $1 }')"

    if [[ -n "$project" ]]; then
        gcloud config set project "$project"
    fi
}

fzf-gcloud-config-set-project
