{
  "allowCompoundWords": true,
  "dictionaries": [
    "dotfiles",
    "lua",
    "user",
    "vim"
  ],
  "dictionaryDefinitions": [
    {
      "name": "dotfiles",
      "path": "~/.config/nvim/cspell/dotfiles.txt",
      "description": "dotfiles dictionary"
    },
    {
      "name": "user",
      "path": "~/.local/share/nvim/cspell/user.txt",
      "description": "User local dictionary"
    },
    {
      "name": "vim",
      "path": "~/.local/share/nvim/cspell/vim.txt.gz",
      "description": "Vim Script Language dictionary"
    }
  ],
  "languageSettings": [
    {
      "languageId": "lua",
      "locale": "*",
      "ignoreRegExpList": [
        "/require.*/"
      ],
      "dictionaries": [
        "lua"
      ]
    },
    {
      "languageId": "vim",
      "locale": "*",
      "ignoreRegExpList": [
        "/Plug .*/"
      ],
      "dictionaries": [
        "vim"
      ]
    }
  ]
}
