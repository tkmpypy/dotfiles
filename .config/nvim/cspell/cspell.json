{
  "allowCompoundWords": true,
  "dictionaries": [
    "global",
    "lua",
    "user",
    "vim"
  ],
  "dictionaryDefinitions": [
    {
      "name": "global",
      "path": "~/.config/nvim/cspell/global.txt",
      "description": "Global dictionary",
      "addWords": true
    },
    {
      "name": "user",
      "path": "~/.local/share/nvim/cspell/user.txt",
      "description": "User local dictionary",
      "addWords": true
    },
    {
      "name": "vim",
      "path": "~/.local/share/nvim/cspell/vim.txt.gz",
      "description": "Vim Script Language dictionary"
    }
  ],
  "languageSettings": [
    {
      "languageId": "lua",
      "locale": "*",
      "ignoreRegExpList": [
        "/require.*/"
      ],
      "dictionaries": [
        "lua"
      ]
    },
    {
      "languageId": "vim",
      "locale": "*",
      "ignoreRegExpList": [
        "/Plug .*/"
      ],
      "dictionaries": [
        "vim"
      ]
    }
  ],
  "ignorePaths": [
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "node_modules/**",
    "vscode-extension",
    ".git",
    "*.dll",
    "**/*.dll"
  ]
}
